doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/styles.css")
        title Movies 
    
    body

        header
            nav(class='navbar')
                    a(href="#", class="nav-branding") MovieApp
                    ul(class="nav-menu")
                        li(class="nav-item")
                            a(href="/dashboard", class="nav-link") Dashboard
                        li(class="nav-item")
                            a(href="/search", class="nav-link") Search
                        li(class="nav-item")
                            a(href="/movies", class="nav-link") My movies
                        li(class="nav-item")
                            a(href="/logout", class="nav-link") Logout
                    div(class="hamburger")
                            span(class="bar")
                            span(class="bar")
                            span(class="bar") 
        section 

            p Año: #{film.info.year}
            p Duración: #{film.info.runtimeStr}
            p Género/s: #{film.info.genres}
            p Título: #{film.info.title}
            p Trama : #{film.info.plot}
            img(src=film.info.image, alt="Imagen de la película")
            p Review Sensacine:
            p Author: #{film.reviewS.innerUserOfReview} 
            p #{film.reviewS.innerTextOfReview}
            p Review FilmAffinity:
            p Author: #{film.reviewF.innerUserOfReview} 
            p #{film.reviewF.innerTextOfReview} 
           

          

        script(src="/js/hamburger.js")
