include  ../head.pug

section  
    ul
        each film in films
            div  
                p Año: #{film.description}
                p Duración: #{film.runtimeStr}
                p Género/s: #{film.genres}
                p Título: #{film.title}
                p Director: #{film.directors}
                img(src=film.image, alt="Imagen de la película")
                - var idMovie = film.id
                form(method='get' action=`/movie/${idMovie}`)
                    button(type='submit') Ver detalles de #{film.title}